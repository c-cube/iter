
(rule
  ((targets (run_qtest.ml))
   (deps ((file Makefile) )) ; (glob_files ../src/**/*.ml{,i})))
   (fallback)
   ;(libraries (qtest qcheck))
   (action
     (run make qtest-gen))
  ))

(executable
  ((name run_qtest)
   (libraries (sequence qcheck))
  ))

(alias
 ((name    runtest)
  (deps    (run_qtest.exe))
  (action  (run ${<}))
  ))

